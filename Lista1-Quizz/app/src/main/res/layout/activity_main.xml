<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Pytanie"
        android:text="Pytanie"
        android:textColor="#EEEEEE"
        android:layout_centerHorizontal="true"
        android:textSize="35dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Pytanie"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="0"
        android:indeterminate="false" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ZawartoscPytania"
        android:text="Zawartość Pytania"
        android:textColor="#EEEEEE"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:layout_above="@+id/radioGroupOpcje">

    </TextView>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/radioGroupOpcje">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/odp_A"
            android:layout_margin="5dp"
            android:background="#76ABAE"
            android:textColor="#EEEEEE"
            android:text="Opcja A" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/odp_B"
            android:layout_margin="5dp"
            android:background="#76ABAE"
            android:textColor="#EEEEEE"
            android:text="Opcja B" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/odp_C"
            android:layout_margin="5dp"
            android:background="#76ABAE"
            android:textColor="#EEEEEE"
            android:text="Opcja C" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/odp_D"
            android:layout_margin="5dp"
            android:background="#76ABAE"
            android:textColor="#EEEEEE"
            android:text="Opcja D" />

    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitbutton"
        android:text="Następne"
        android:textColor="#EEEEEE"
        android:backgroundTint="#31363F"
        android:layout_below="@id/radioGroupOpcje"
        android:layout_margin="30dp" >

    </Button>



</RelativeLayout>
